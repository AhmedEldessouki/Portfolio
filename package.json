{
  "name": "portfolio",
  "version": "0.2.0",
  "private": true,
  "proxy": "http://localhost:3001",
  "dependencies": {
    "@emotion/react": "^11.1.2",
    "axios": "^0.21.0",
    "cloudinary-react": "^1.6.8",
    "debounce-fn": "^4.0.0",
    "firebase": "^8.2.0",
    "is-ci": "^2.0.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.2.4",
    "react-error-boundary": "^3.1.0",
    "react-icons": "^4.1.0",
    "react-query": "^3.2.0",
    "react-query-devtools": "^2.6.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1",
    "react-toastify": "^6.2.0",
    "serve": "^11.3.2"
  },
  "devDependencies": {
    "@testing-library/cypress": "^7.0.2",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.7.0",
    "@testing-library/user-event": "^12.6.0",
    "cypress": "^6.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.15.0",
    "eslint-config-kentcdodds": "^17.3.0",
    "eslint-plugin-cypress": "^2.11.2",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "msw": "^0.24.2",
    "prettier": "^2.2.0",
    "pretty-quick": "^3.1.0"
  },
  "engines": {
    "node": ">10.19.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "start": "npm run build && serve -s build",
    "dev": "react-scripts start",
    "setup": "npm install && npm run validate",
    "validate": "npm run build",
    "format": "prettier --write \"**/*.+(js|jsx|json|css|yml|yaml|html)\"",
    "lint": "eslint .",
    "test": "react-scripts test",
    "cy:open": " cypress open",
    "cy:run": " cypress run",
    "test:e2e": "start-server-and-test start http://localhost:3000 cy:run",
    "test:coverage": "npm run test -- --coverage --watchAll=false",
    "test:lint": "npm run test -- --watchAll=false"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text"
    ]
  }
}
