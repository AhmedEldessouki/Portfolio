    "typescript": "^4.1.3"
  },
  "scripts": {
    "build": "react-scripts build",
    "start": "cross-env PORT=8888 react-scripts start",
    "dev": "run-p start start:firestore",
    "start:firestore": "firebase emulators:start --import=./dev-data --export-on-exit --only firestore",
    "setup": "npm install && npm run validate",
    "verify": "run-s build test",
    "tsTypeVerify": "tsc --watch",
    "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|css|yml|yaml|html)\"",
    "lint": "eslint --fix --ext js,jsx,ts,tsx --ignore-path .gitignore .",
    "lint:ci": "eslint --ext js,jsx,ts,tsx --ignore-path .gitignore .",
    "test": "jest",
    "test:precommit": "jest  --watch=false --findRelatedTests",
    "test:coverage": "jest --watch=false --coverage",
    "test:e2e": "start-server-and-test start 8888 cy:run",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:verify": "npx cypress verify"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
