    "faker": "^5.2.0",
    "firebase-mock": "^2.3.2",
    "husky": "^4.3.8",
    "is-ci": "^2.0.0",
    "jest": "26.6.0",
    "lint-staged": "^10.5.3",
    "msw": "^0.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "pretty-quick": "^3.1.0",
